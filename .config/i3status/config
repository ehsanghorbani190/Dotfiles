general{
	interval = 1
}

order += "disk /"
order += "wireless wlo1"
order += "battery 0"
order += "cpu_temperature 0"
order += "memory"
order += "load"
order += "volume master"
order += "tztime local"

wireless wlo1 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

